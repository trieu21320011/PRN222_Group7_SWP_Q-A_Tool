@page
@model SWP_QA_TOOL.Pages.UserPage.Meetings.IndexModel
@{
    ViewData["Title"] = "Meetings";
}

<div class="page-header">
    <h2>Meetings</h2>
    <button class="btn btn-ask-question" data-bs-toggle="modal" data-bs-target="#scheduleMeetingModal">
        <i class="fas fa-plus me-1"></i> Schedule Meeting
    </button>
</div>

<!-- Calendar View Toggle -->
<div class="qa-form-card mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
            <button class="filter-btn active">Upcoming</button>
            <button class="filter-btn">Past</button>
            <button class="filter-btn">All</button>
        </div>
        <div class="btn-group">
            <button class="filter-btn active"><i class="fas fa-list"></i> List</button>
            <button class="filter-btn"><i class="fas fa-calendar"></i> Calendar</button>
        </div>
    </div>
</div>

<!-- Upcoming Meetings -->
<h5 class="mb-3">Today - February 26, 2026</h5>
<div class="qa-widget mb-4">
    <div class="d-flex align-items-center p-3 border-bottom">
