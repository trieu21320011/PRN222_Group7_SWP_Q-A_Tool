@page
@model SWP_QA_TOOL.Pages.UserPage.Questions.AskModel
@{
    ViewData["Title"] = "Ask a Question";
}

<div class="page-header">
    <h2>Ask a public question</h2>
</div>

<!-- Tips Card -->
<div class="qa-widget mb-4" style="background-color: #ebf4fb; border-color: #a6ceed;">
    <div class="d-flex">
        <div class="me-3">
            <i class="fas fa-lightbulb fa-2x text-primary"></i>
        </div>
        <div>
            <h5 class="mb-2">Writing a good question</h5>
            <p class="mb-2 small">
                You're ready to ask a programming-related question and this form will help guide you through the process.
            </p>
            <p class="mb-0 small"><strong>Steps:</strong></p>
            <ul class="mb-0 small">
                <li>Summarize your problem in a one-line title</li>
                <li>Describe your problem in more detail</li>
                <li>Describe what you tried and what you expected to happen</li>
                <li>Add "tags" which help surface your question to members of the community</li>
            </ul>
        </div>
    </div>
</div>

<form method="post">
    <!-- Title -->
    <div class="qa-form-card mb-3">
        <div class="qa-form-group mb-0">
            <label for="title">Title</label>
            <p class="form-text mt-1 mb-2">
                Be specific and imagine you're asking a question to another person.
            </p>
            <input type="text" id="title" class="qa-form-control" 
                   placeholder="e.g. How to implement authentication in ASP.NET Core?" />
        </div>
    </div>

    <!-- Body -->
    <div class="qa-form-card mb-3">
        <div class="qa-form-group mb-0">
            <label for="body">What are the details of your problem?</label>
            <p class="form-text mt-1 mb-2">
                Introduce the problem and expand on what you put in the title. Minimum 20 characters.
            </p>
            <div class="mb-2">
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group btn-group-sm me-2">
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-bold"></i></button>
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-italic"></i></button>
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-link"></i></button>
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-quote-right"></i></button>
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-code"></i></button>
                    </div>
                    <div class="btn-group btn-group-sm me-2">
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-image"></i></button>
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-list-ol"></i></button>
                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-list-ul"></i></button>
                    </div>
                </div>
            </div>
            <textarea id="body" class="qa-form-control" rows="12" 
                      placeholder="Describe your problem here..."></textarea>
        </div>
    </div>

    <!-- What did you try -->
    <div class="qa-form-card mb-3">
        <div class="qa-form-group mb-0">
            <label for="tried">What did you try and what were you expecting?</label>
            <p class="form-text mt-1 mb-2">
                Describe what you tried, what you expected to happen, and what actually resulted.
            </p>
            <textarea id="tried" class="qa-form-control" rows="6" 
                      placeholder="Explain what you've tried so far..."></textarea>
        </div>
    </div>

    <!-- Tags -->
    <div class="qa-form-card mb-3">
        <div class="qa-form-group mb-0">
            <label for="tags">Tags</label>
            <p class="form-text mt-1 mb-2">
                Add up to 5 tags to describe what your question is about. Start typing to see suggestions.
            </p>
            <input type="text" id="tags" class="qa-form-control" 
                   placeholder="e.g. c# asp.net-core entity-framework" />
            <div class="mt-2">
                <span class="text-muted small">Popular tags:</span>
                <a href="#" class="tag-badge ms-1">c#</a>
                <a href="#" class="tag-badge">asp.net-core</a>
                <a href="#" class="tag-badge">javascript</a>
                <a href="#" class="tag-badge">entity-framework</a>
                <a href="#" class="tag-badge">sql</a>
            </div>
        </div>
    </div>

    <!-- Team (Optional) -->
    <div class="qa-form-card mb-4">
        <div class="qa-form-group mb-0">
            <label for="team">Post to a Team (optional)</label>
            <p class="form-text mt-1 mb-2">
                If this question is related to a specific team project, you can post it to that team.
            </p>
            <select id="team" class="qa-form-control">
                <option value="">-- Public Question --</option>
                <option value="1">Team Alpha - SWP391 Project</option>
                <option value="2">Team Beta - PRN222 Project</option>
                <option value="3">Team Gamma - Database Project</option>
            </select>
        </div>
    </div>

    <!-- Submit -->
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-paper-plane me-2"></i> Post your question
        </button>
        <a asp-page="/UserPage/Questions/Index" class="btn btn-outline-secondary btn-lg">
            Discard draft
        </a>
    </div>
</form>
